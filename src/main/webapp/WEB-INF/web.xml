<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>movie-reservation</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Reservation</servlet-name>
		<servlet-class>controller.ReservationController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Reservation</servlet-name>
		<url-pattern>/reservation</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>User</servlet-name>
		<servlet-class>controller.UserController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>User</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Movie</servlet-name>
		<servlet-class>controller.MovieController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Movie</servlet-name>
		<url-pattern>/movie</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>MovieCrawling</servlet-name>
		<servlet-class>controller.MovieCrawlingController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>MovieCrawling</servlet-name>
		<url-pattern>/moviecrawling</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>App</servlet-name>
		<servlet-class>controller.AppController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>App</servlet-name>
		<url-pattern>/app</url-pattern>
	</servlet-mapping>


</web-app>